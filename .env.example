# Blog Admin Configuration
# Generate hash using: node -e "crypto.createHash('sha256').update('your-password').digest('hex')"
VITE_ADMIN_PASSWORD_HASH=your_password_hash_here

# GitHub Integration for Blog Image Uploads
# Generate a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo (for repository access)
VITE_GITHUB_TOKEN=ghp_your_github_token_here

# Repository Configuration  
# Format: owner/repository-name
VITE_GITHUB_REPO=your-username/your-repository-name

# Target Branch (optional, defaults to "main")
VITE_GITHUB_BRANCH=main

# Netlify Identity Configuration (optional - configured in Netlify dashboard)
# VITE_NETLIFY_IDENTITY_URL=https://your-site.netlify.app/.netlify/identity

# Netlify CMS Configuration (set in Netlify UI)
# NETLIFY_CMS_GITHUB_TOKEN=same_as_vite_github_token
# NETLIFY_CMS_SITE_URL=https://yourdomain.com

# Tina CMS Configuration
# Enable/disable Tina CMS integration (true/false)
VITE_USE_TINA_CMS=false

# Tina GitHub Token (Personal Access Token)
# This can be the same as VITE_GITHUB_TOKEN if using the same GitHub account
# Required scopes: repo (full repository access), workflow (update GitHub Actions)
# Generate at: https://github.com/settings/tokens/new
# VITE_TINA_TOKEN=ghp_your_github_personal_access_token_here

# Tina Client ID (required for Tina Cloud - future enhancement)
# Get from Tina Cloud dashboard at https://app.tina.io/
# VITE_TINA_CLIENT_ID=your_tina_client_id_here

# Tina Branch (optional, defaults to main branch)
# Can be different from VITE_GITHUB_BRANCH if needed
# VITE_TINA_BRANCH=main

# GitHub OAuth App (for future OAuth implementation)
# Create at: https://github.com/settings/applications/new
# VITE_GITHUB_CLIENT_ID=your_github_oauth_app_client_id
# VITE_GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret
